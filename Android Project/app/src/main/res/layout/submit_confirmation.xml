<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e2e2e2"
    android:orientation="vertical"
    android:id="@+id/submit_confirmation_layout"
    android:padding="32dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alert_view"
        android:text="Are you sure you want to submit?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/alert_view">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/cancel_view"
            android:text="Cancel"
            android:layout_weight=".5"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/confirm_view"
            android:text="Submit"
            android:layout_weight=".5"/>


    </LinearLayout>

</LinearLayout>